<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/addfollow_relativeLayout01"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/addfollow_allBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="12dp"
            android:text="返回" />

        <Button
            android:id="@+id/addfollow_searchBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="12dp"
            android:text="搜索" />

        <TextView
            android:id="@+id/addfollow_title"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/addfollow_searchBtn"
            android:layout_toRightOf="@id/addfollow_allBtn" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/addfollow_relativeLayout02"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/addfollow_relativeLayout01"
        android:orientation="horizontal" >

        <com.devsmart.android.ui.HorizontalListView
            android:id="@+id/addfollow_section_listview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ddd" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/addfollow_relativeLayout03"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/addfollow_relativeLayout02" >

        <ListView
            android:id="@+id/addfollow_board_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</RelativeLayout>